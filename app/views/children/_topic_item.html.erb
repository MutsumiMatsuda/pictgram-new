<% topics.each do |topic| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="topic-index-single">
        <h2 class="topic-author"><%= topic.user.name %></h2>
        <%= image_tag topic.image.url %>

        <% if !topic.favorite_users.include?(current_user) %>
        <%# 松田変更ここから %>
          <%= scrTopIcon '/favorites', 'create', topic.id, 'icons/heart-black.png', 'topic-index-icon' %>
        <% else %>
          <%= scrTopIcon '/favorites', 'destroy', topic.id, 'icons/heart-pink.png', 'topic-index-icon' %>
        <%# 松田変更ここまで %>
        <% end %>
        <%= topic.favorite_users.count %>

        <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
        <p class="topic-text">
          <%= topic.description %>
        </p>

        <%# コメントの表示 %>
        <% topics.comments.each do |comment| %>
          <%= comment.lines %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
